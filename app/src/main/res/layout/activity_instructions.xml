<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:background="#300e69"
    android:fadeScrollbars="false"
    android:fillViewport="true"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:scrollbarStyle="insideOverlay"
    android:scrollbars="vertical"
    tools:orientation="vertical"
    tools:scrollbarFadeDuration="0"
    tools:style="@android:style/Widget.ScrollView"
    tools:verticalScrollbarPosition="right">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#300e69"
    tools:background="#300e69"
    tools:context=".instructions">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#300e69">

        <TextView
            android:id="@+id/heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="169dp"
            android:backgroundTint="@android:color/holo_green_light"
            android:text="INSTRUCTIONS"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textAppearance="@android:style/TextAppearance.Material.Title"
            android:textColor="@android:color/holo_green_light"
            android:textColorHighlight="@android:color/holo_green_light"
            android:textColorHint="@android:color/holo_red_light"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            tools:textColor="@android:color/holo_green_light" />

        <Button
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/instructions"
            android:layout_centerHorizontal="true"
            android:background="@android:color/holo_orange_dark"
            android:text="Start Test"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textAppearance="@android:style/TextAppearance.Material.Title"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/name"
            android:layout_width="276dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="52dp"
            android:backgroundTint="@android:color/holo_orange_light"
            android:ems="10"
            android:hint="Name"
            android:inputType="textCapCharacters|textAutoComplete|textPersonName"
            android:singleLine="true"
            android:textAlignment="viewStart"
            android:textAllCaps="true"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:textColor="@android:color/holo_red_light"
            android:textColorHint="@android:color/holo_red_light"
            android:textSize="30sp"
            android:textStyle="bold|italic"
            tools:textColorHint="@android:color/holo_red_light" />

        <TextView
            android:id="@+id/instructions"
            android:layout_width="match_parent"
            android:layout_height="329dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/heading"
            android:text="Test is of 30 seconds duration\n\nAfter 5 minutes it will automatically submit\n\n1 mark for every correct answer\n\nNo negative marking\n\nClick submit to submit\n\nClick start test to start the test"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:textColor="@android:color/white"
            android:textStyle="bold|italic" />
    </RelativeLayout>

</RelativeLayout>
</ScrollView>